<h2>New Post</h2>

<form class="form" id="newpostform" action="#"> 
    <div>
        <label class="form-label" for="title">Title</label>
        <input type="text" id="title" name="title" />
    </div>
    <div>
        <label class="form-label" for="image">Select an image</label>
        <input type="file" id="image" name="image" />
    </div>
    <div>
        <labe class="form-label"l for="body">Content</label>
        <input type="text" id="body" name="body" />
    </div>
    <div>
        <label class="form-label" for="category">Category</label>
        <select id="category" name="category">
            <option value="personal">Personal</option>
        </select>
    </div>
    <input type="hidden" name="user_id" value="{{user_id}}"/>
    <button class="btn btn-primary" type="submit">Create post</button>
</form>
<script>
    const newPostForm = document.getElementById('newpostform');

    async function submitPost(event) {
        event.preventDefault();
        const formData = new FormData(newPostForm);
        const submissionData = Object.create(null);
        for (let [name, value] of formData.entries()) {
            submissionData[name] = value;
        }

        const response = await fetch('/api/gallery', {
            method: 'POST',
            body: JSON.stringify(submissionData),
            headers: {
                'Content-Type': 'application/json'
            }
        });
        if (response.ok) {
            alert('Created post successfully');
        } else {
            alert('Failed to create post');
        }
    }
    newPostForm.addEventListener("submit", submitPost);
</script>