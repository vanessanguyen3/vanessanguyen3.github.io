

<button id="createArtBtn" >Create New Art Post</button>

<section id="artForm">
  <h2>Create New Art Post</h2>

  <form class="new-art-form">
    <div>
      <label for="art-title">Title</label>
      <input type="text" id="art-title" name="art-title" />
    </div>
    <div>
      <label for="content" >Content</label>
      <textarea id="content" name="content" rows="6" cols="50"></textarea>
    </div>
        <div>
        <label for="image">image</label>
        <input type="file" id="image" />
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</section>

{{#if art.length}}
<section id="blogArt">
  <h2>Your Art</h2>
  <ol>
    {{#each art as |art|}}
    <li>
      {{> art-info art}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit art post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/js/add-art.js"></script>
<script src="/js/comments.js"></script>
<script src=""></script>

<ol class="home-routes">
  <li>
    <article class="post">
      <div class="title">
        <a href="{{post_url}}" target="_blank">{{title}}</a>
        <span>({{post_url}})</span>
      </div>
      <div class="meta">
        {{vote_count}} point(s) by {{user.username}} on
        {{created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
      </div>
    </article>
  </li>

</ol>

</ol>

